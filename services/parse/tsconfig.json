{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",

    "allowSyntheticDefaultImports": true,
    "importHelpers": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "noEmitOnError": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "lib": [
      "es2017"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
